@model IEnumerable<DemoMVC.Models.SACH>

@{
    ViewBag.Title = "QLSach";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Quản lí thông tin sách</h2>
    
<table class="table table-hover table-bordered">
    <tr>
        <th class="text-center" style="width: 10%">Tên sách</th>
        <th class="text-center" style="width: 10%">Giá bán</th>
        <th class="text-center" style="width: 20%">Mô tả</th>
        <th class="text-center" style="width: 10%">Ảnh bìa</th>
        <th class="text-center" style="width: 10%">Ngày cập nhật</th>
        <th class="text-center" style="width: 10%">Số lượng tồn</th>
        <th class="text-center" style="width: 5%">MCD</th>
        <th class="text-center" style="width: 5%">MNXB</th>
        <th class="text-center" style="width: 30%">Tùy chọn</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tensach)
        </td>
        <td>@String.Format("{0:0,0}đ", item.Giaban)</td>
        <td>
            <span class="w-100">@item.Mota</span>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Anhbia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ngaycapnhat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Soluongton)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaCD)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaNXB)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.Masach }, new {@class = "btn btn-primary" })
            @Html.ActionLink("Chi tiết", "Details", new { id=item.Masach }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Xóa", "Delete", new { id=item.Masach }, new { @class = "btn btn-primary" })
        </td>
    </tr>
}

</table>
